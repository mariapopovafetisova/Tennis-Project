@using Microsoft.AspNetCore.Identity;
@inject SignInManager<UserProfile> signInManager;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Tennis</title>
   
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Tennis.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Stylesheet.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.0/css/all.min.css" />


</head>



<body>
    <header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
  <div class="container-fluid">
    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"> TA</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarColor01">
      <ul class="navbar-nav me-auto">
        <li class="nav-item">
          
          <a class="nav-link active" asp-area="" asp-controller="Home" asp-action="Index"> Home</a>
            <span class="visually-hidden">(current)</span>
          
        </li>                
        @if (signInManager.IsSignedIn(User))
             {
                
                 <li class="nav-item active" style="margin:auto;">
                    
                    <a class="nav-link active" asp-area="" asp-controller="Account" asp-action="Dashboard">Dashboard</a>
                </li>
                  <li class="nav-item active">
                      
                     <form method="post" asp-action="Logout" asp-controller="Account"style="margin-left:600px;">
                        
                          <button type="submit"style="background:none;border:none;font-size:24px;">Log out</button>
                     </form>
                 </li>
             }
             else{
                 
                <li class="nav-item active"style="margin:auto;">
                     <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                </li>
            }
          
    </ul>
      
    </div>
  </div>
</nav>
   </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @*<footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Tennis - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>*@
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/css/main.css"></script> 
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
