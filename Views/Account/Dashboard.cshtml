
@model IEnumerable<UserProfile>
@{
   
}
<head>
    <link rel="stylesheet" href="~/css/Dashboard.css" asp-append-version="true" />
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
</head>



<div class="container emp-profile" style="height:600px">
            
                
                    
                    <div class="col-md-6" style="max-width:100%;">
                        <div class="profile-head">
                           <div class="col">
                                @foreach(var item in Model)
                               {
                                <h1 style="float:left;">@item.FirstName  @item.LastName</h1>
                                <h6 style="float:right; margin: 20px 0px 0 350px">Matches: @ViewBag.TotalMatches</h6>
                                <h5 style="clear:both;">@item.Email</h5>
                                }
                            </div>
                            </div>  
                                 <div class="profile-head"style="margin:auto; width:50%">
                            <ul class="nav-tabs" id="myTab" role="tablist" style="list-style-type:none;">
                                <li class="nav-item" style="margin-top:15%;">
                                    <a class="nav-link active" id="home-tab" data-toggle="tab" href="#" role="tab" aria-controls="home" aria-selected="true" style="color:darkblue;" >My Matches</a>
                                </li>
                              
                            </ul>
                       </div>
                    </div>
                   
               
             
                

                    <div class="col-md-8" style="margin:auto; width:50%;">
                        <div class="tab-content profile-tab" id="myTabContent">
                            <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                                       <form  method="post" asp-action="ReportMatch" asp-controller="Account">
                                        @foreach(var item in Model){
                                          @foreach(var obj in item.Match){
                                             @foreach(var md in obj.MatchDetails){
                                               
                                                   <div class="col-md-6" style="max-width:100%;height:40px;">
                                                      <div class="anchor" style="width:50%; float:left;">
                                                       <button name="MatId" class="btn" value=@md.MatId>@md.yourPlayer  -  @md.opponentPlayer</button>
                                                          
                                                       </div>   
                                                       <div class="date" style="width:50%; float:left;"> @if (@md.date == null) { <label>   </label>
                                                            }else{<label style="float:right; color:lightsteelblue; font-weight:700">@md.date</label>}
                                                            @if (@md.Event == null) { <label>  </label>
                                                            }else{<label style="float: right; margin-right: 50px; font-weight:400;">@md.Event</label>}
                                                        </div>
                                                        
                                                        </div>
                                                   
                                                        }
                                                    }
                                                }
                                              </form> 
                            
                            
                            
                        </div>
                    </div>
                </div>
                       
        </div>